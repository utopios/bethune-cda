<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/todo_item_done_checkbox"></CheckBox>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:id="@+id/todo_item_name_textview"></TextView>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@android:drawable/ic_delete" android:layout_gravity="center" android:clickable="true" android:id="@+id/delete_item_img"></ImageButton>
</LinearLayout>