<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/firstname_textView_item"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/lastname_textView_item"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/phone_textView_item"></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Click contact" android:id="@+id/item_button"></Button>
</LinearLayout>